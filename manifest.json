{
  "name": "My Source of Knowledge Chrome Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "My Source of Knowledge Chrome Extension",
  "homepage_url": "http://my-sok.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png"
  },
  "permissions": [
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/main.js"
      ]
    }
  ]
}